<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    card_view:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_cardview_author">

        <ImageView
            android:id="@+id/iv_authorPicture"
            android:src="@drawable/placeholder_author"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <Button
            android:id="@+id/btn_author_page"
            android:text="Author page"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/iv_authorPicture"
            app:layout_constraintStart_toStartOf="@id/iv_authorPicture"
            app:layout_constraintEnd_toEndOf="@id/iv_authorPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_authorName"
            android:text="author name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_authorPicture"
            app:layout_constraintTop_toTopOf="@id/iv_authorPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_publishedBooks"
            android:text="author of 1234 books"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/tv_authorName"
            app:layout_constraintStart_toEndOf="@id/iv_authorPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bestKnown"
            android:text="@string/text_best_known_for"
            app:layout_constraintTop_toBottomOf="@id/tv_publishedBooks"
            app:layout_constraintStart_toEndOf="@id/iv_authorPicture"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/default_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_popularBookCover"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/placeholder_book"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_authorPicture"
            app:layout_constraintTop_toBottomOf="@+id/tv_bestKnown" />

        <TextView
            android:id="@+id/tv_popularBookTitle"
            android:text="Popular book title"
            app:layout_constraintStart_toEndOf="@id/iv_popularBookCover"
            app:layout_constraintTop_toTopOf="@id/iv_popularBookCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_book_page"
            android:text="Check book"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintStart_toEndOf="@id/iv_popularBookCover"
            app:layout_constraintTop_toBottomOf="@id/tv_popularBookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>